<%- include('partials/header') %>

    

    <div
      class="container-fluid header-bg py-5 mb-5 wow fadeIn"
      data-wow-delay="0.1s"
    >
      <div class="container py-5">
        
      </div>
    </div>

    <div class="container-xxl py-5">
      <div class="container">
    <button class="btn btn-success"><a href="/reports/create">CREATE REPORT</a></button>

        <div class="row g-5 mb-5 wow fadeInUp" data-wow-delay="0.1s">
          <div class="col-lg-6">
           
            <h1 class="display-5 mb-0">
            
            </h1>
          </div>
        </div>


        <div class="row gy-5 gx-4 justify-content-start d-flex">
          <% record.Report.forEach(report=>{%>
          <div
            class="col-lg-3 col-md-4 col-sm-6 wow fadeInUp shadow m-3 p-3"
            data-wow-delay="0.1s"
          >
            <h5 class="mb-3"><%= report.patientName %></h5>
            <hr>
            <div>
              <table class="border-1 w-100">
                <tr> <td><b>Age: </b></td> <td><%= report.age %></td></tr>
                <tr> <td><b>Hospital Name: </b></td> <td><%= report.hospitalName %></td></tr>
                <tr> <td><b>Weight: </b></td> <td><%= report.weight %></td></tr>
                <tr> <td><b>Height: </b></td> <td><%= report.height %></td></tr>
                <tr> <td><b>BloodGroup: </b></td> <td><%= report.bloodGroup %></td></tr>
                <tr> <td><b>Genotype: </b></td> <td><%= report.genotype %></td></tr>
                <tr> <td><b>BloodPressure: </b></td> <td><%= report.bloodPressure %></td></tr>
                <tr> <td><b>HIV Status: </b></td> <td><%= report.HIV_status %></td></tr>
                <tr> <td><b>Hepatitis: </b></td> <td><%= report.hepatitis %></td></tr>
                <tr> <td><b>Doctor Name: </b></td> <td><%= record.DoctorsName %></td></tr>
              </table>
              <div class="d-flex justify-content-between w-100">
                <button class="btn btn-success m-2 w-100"><a href="/reports/read/<%= report.id %>"> Edit</a></button>
                <button class="btn btn-danger m-2 w-100" onclick="deleteReport('<%= report.id %>')">Delete</button>
              </div>
            </div>
          </div>
          <% }) %>
        </div>

      </div>
    </div>



  
  <%- include('partials/footer') %>

  <script>
    // DELETE REPORT
    function deleteReport(id){
if(confirm("Are you sure you want to delete this patient report")){

    axios({
      method:"delete",
      url:`/reports/delete/${id}`,
      headers: {'Content-Type':'application/json'}
    }).then(response=>{
      if(response.data.msg= "Successfully deleted patient report"){
        window.location.href="/home"
      }
    }).catch(error=>{
     alert('An error occured')
    })
    }
  }
  </script>